keybind = performable:ctrl+c=copy_to_clipboard

keybind = ctrl+shift+r=reload_config

keybind = ctrl+l=clear_screen

keybind = alt+z=toggle_split_zoom
keybind = alt+n=new_split:auto

# slipts movement
keybind = alt+arrow_up=goto_split:up
keybind = alt+k=goto_split:up
keybind = alt+arrow_down=goto_split:down
keybind = alt+j=goto_split:down
keybind = alt+arrow_left=goto_split:left
keybind = alt+h=goto_split:left
keybind = alt+arrow_right=goto_split:right
keybind = alt+l=goto_split:right

# splits resize
keybind = alt+shift+arrow_up=resize_split:up,10
keybind = alt+shift+k=resize_split:up,10

keybind = alt+shift+arrow_down=resize_split:down,10
keybind = alt+shift+j=resize_split:down,10

keybind = alt+shift+arrow_left=resize_split:left,10
keybind = alt+shift+h=resize_split:left,10

keybind = alt+shift+arrow_right=resize_split:right,10
keybind = alt+shift+l=resize_split:right,10

